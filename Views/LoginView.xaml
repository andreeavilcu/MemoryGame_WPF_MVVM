<Window x:Class="MemoryGame.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.Views"
        mc:Ignorable="d"
        Title="Memory Game - Login" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F2F2F2">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Memory Game" 
                   FontSize="26" 
                   FontWeight="Bold" 
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <!-- User Selection Section -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Users List -->
            <ListView Grid.Column="0"
                      Margin="10"
                      ItemsSource="{Binding Users}"
                      SelectedItem="{Binding SelectedUser}"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      Background="White">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Width="50" Height="50"
                                    BorderBrush="#ccc" 
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Margin="0,0,10,0">
                                <Image Source="{Binding ImagePath}"
                                       Stretch="UniformToFill"/>
                            </Border>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding Username}"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Foreground="#444"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Selected User Image -->
            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Width="120"
                        Height="120"
                        CornerRadius="10"
                        Margin="0,10">
                    <Image Source="{Binding SelectedImagePath}" 
                            Stretch="Uniform"
                            ClipToBounds="True"/>
                </Border>
                <TextBlock Text="{Binding SelectedUser.Username}" 
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Buttons Section -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="Add User" 
                    Command="{Binding AddUserCommand}" 
                    Width="110" 
                    Height="35" 
                    FontSize="14"
                    Background="#3498db"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Margin="10"/>

            <Button Content="Delete User" 
                    Command="{Binding DeleteUserCommand}" 
                    Width="110" 
                    Height="35" 
                    FontSize="14"
                    Background="#e74c3c"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Margin="10"/>

            <Button Content="Play" 
                    Command="{Binding PlayGameCommand}" 
                    Width="110" 
                    Height="35" 
                    FontSize="14"
                    Background="#2ecc71"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
